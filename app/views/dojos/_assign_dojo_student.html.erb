<%= simple_form_for @dojo_student, :html => { :class => 'form' } do |f| %>  
    <%= f.input :student_id, :label => 'Assign a Student to this Dojo:', :collection => Student.alphabetical %>
    <%= f.input :dojo_id, :as => :hidden, :input_html => { :value => @dojo.id } %>


    <%= f.submit nil, :class => 'btn btn-primary' %>
    
<% end %>